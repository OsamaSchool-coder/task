<Window x:Class="Task_wpf_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_wpf_v2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Gray">
        <Button x:Name="Login_btn" Content="Login" HorizontalAlignment="Center" Margin="0,322,0,0" VerticalAlignment="Top" FontFamily="Cascadia Code" FontSize="24" FontWeight="Bold" Click="Login_btn_Click"/>
        <Label Content="User Name" HorizontalAlignment="Left" Margin="158,119,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="username_txt" HorizontalAlignment="Left" Margin="287,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="255" FontFamily="Comic Sans MS" FontSize="24" FontWeight="Bold"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="158,0,0,0" VerticalAlignment="Center" FontFamily="Times New Roman" FontSize="24" FontWeight="Bold"/>
        <PasswordBox x:Name="password_txt" HorizontalAlignment="Left" Margin="287,0,0,0" VerticalAlignment="Center" Width="255" Height="38" FontFamily="Times New Roman" FontSize="24" FontWeight="Bold"/>

    </Grid>
</Window>
